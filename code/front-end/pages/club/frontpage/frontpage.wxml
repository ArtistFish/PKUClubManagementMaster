<!--pages/frontpage/frontpage.wxml-->
<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">社团详情</view>
</cu-custom>
<view wx:if="{{loaded_info && loaded_manager && loaded_member}}">
  <view class="grid col-2 padding-sm">
    <view class="bg-img padding-top-xl flex align-end" style="background-image: url('https://ossweb-img.qq.com/images/lol/web201310/skin/big10001.jpg');height: 207rpx;">
        <view class="bg-shadeBottom flex solid-bottom padding justify-end padding-top-xl flex-sub">
          <view class="cuIcon-friend lg"></view>
          <text>{{member_number}}</text>
        </view>
    </view>
    <view class="solid-bottom text-xl padding">
          <text class="text-black text-bold">{{club_name}}</text>
          <view class="grid col-2 padding-sm">
            <view class="cu-capsule padding-top-xl">
              <view class="cu-tag bg-red">
                <text class="cuIcon-likefill"></text>
              </view>
              <view class="cu-tag line-red">
                12
              </view>
            </view>
            <view class="padding-top-xl">
              <view class="cu-tag bg-red padding-sm">{{club_tag}}</view>
            </view>
          
          </view>
    </view>
  </view>
  <scroll-view scroll-x class="bg-white nav">
    <view class="flex text-center">
      <view class="cu-item flex-sub text-lg text-shadow {{index==TabCur?'text-orange cur':'text-gray'}}" wx:for="{{4}}" wx:key bindtap="tabSelect" data-id="{{index}}">
        {{Tabs[index]}}
      </view>
    </view>
  </scroll-view>

  <basicInfo wx:if="{{TabCur==0}}"></basicInfo>
  <activities wx:if="{{TabCur==1}}"></activities>
  <moments wx:if="{{TabCur==2}}"></moments>
  <personnel wx:if="{{TabCur==3}}"></personnel>
</view>

<loading wx:else></loading>