.wraper{
  margin-left: 15px;
  margin-right: 15px;
  margin-top: 15px;
}
.club-card{
  height:100px;
}

.new-card{
  height:200px;
}
.my-badge {
	border-radius: 12rpx;
	position: absolute;
	top: -10rpx;
	left: -10rpx;
	font-size: 25rpx;
	padding: 0rpx 10rpx;
	height: 40rpx;
  color: var(--white);
  margin-top:1px;
}

.radius-lg {
	border-radius: 12rpx;
}

.xxx{
  margin-bottom: -10px;
}

.s-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 20rpx;
}
.s-item {
  width: 46%;
  background-color: #fff;
  margin-bottom: 50rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
.si-img {
  width: 100%;
  height: 200rpx;
  object-fit: contain;
}
.si-title {
  font-size: 34rpx;
  color: #000;
  font-weight: 600;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.si-data {
  font-size: 28rpx;
  color: #333;
  font-weight: 200;
  margin: 10rpx 0 20rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.si-other {
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 0 20rpx;
  margin-bottom: 30rpx;
}
.sio-price {
  font-size: 38rpx;
  color: rgb(92, 131, 177);
  font-weight: 600;
}
.sio-btn {
  width: 150rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background-color: #29d829;
  border-radius: 70rpx;
  font-size: 28rpx;
  color: #000;
  font-weight: 500;
}
.cu-bar.feet {
	position: fixed;
	width: 100%;
	bottom: 0;
	z-index: 1024;
}